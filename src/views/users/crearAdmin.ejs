<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>
  <!-- header -->
  <%- include('../partials/headerAdmin.ejs') %>


    <main class="main-crear">

      <form method="POST" class="crear-form"  enctype="multipart/form-data">

        <h1 class="titulo-crear">
          Crear nuevo administrador
        </h1>

        <small class="text-crear"><%= locals.errors && errors.firstName ? errors.firstName.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="firstName">Nombre</label>
          <input type="text" name="firstName" id="firstName" placeholder="Nombre"  value="<%= (locals.old && old.firstName) && old.firstName %>">
        </div>

        <small class="text-crear"><%= locals.errors && errors.lastName ? errors.lastName.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="lastName">Apellido</label>
          <input type="text" name="lastName" id="lastName" placeholder="Apellido"  value="<%= (locals.old && old.lastName) && old.lastName %>">
        </div>

        
        <small class="text-crear"><%= locals.errors && errors.userName ? errors.userName.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="userName">Usuario</label>
          <input type="text" name="userName" id="userName" placeholder="Usuario"  value="<%= (locals.old && old.userName) && old.userName %>">
        </div>

        <small class="text-crear"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Email"  value="<%= (locals.old && old.email) && old.email %>">
        </div>

        <div class="crear__subtitulo">
            <h3>Avatar</h3>
          </div>
  
          <small class="text-crear"><%= locals.errors && errors.image ? errors.image.msg : null %></small>
         <div class="submit-btn--crear">
            <input type="file" id="myFile" name="image" class="submit-btn--crear__buscar">
            <label for="myFile">
              <i class="fa-solid fa-image"></i><br>
              <div class="submit-btn--crea__nombrearchi">
                <span>Subir imagen</span>
              </div>
            </label >
          </div>

        <small class="text-crear"><%= locals.errors && errors.password ? errors.password.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="password">Contraseña</label>
          <input type="password" name="password" id="password" placeholder="Contraseña"  value="<%= (locals.old && old.password) && old.password %>">
        </div>

        <small class="text-crear"><%= locals.errors && errors.password2 ? errors.password2.msg : null %></small>
        <div class="crear__nameprodu">
          <label for="password2">Confirmar</label>
          <input type="password" name="password2" id="password2" placeholder="Confirmar"  value="<%= (locals.old && old.password2) && old.password2 %>">
        </div>

        <small class="register__avataradv">*Nombre de usuario se debe respetaran mayusculas y minusculas para el ingreso </small>
        <div class="crear-btnform">
          <button type="submit" class="crear-btn--submit">Registrar</button>
          <a href="/admin/dashboardUser" class="crear-btn--cancelar"><span class="crear-btn--cancelar--letra">Cancelar</span></a>
        </div>
      </form>
    </main>
    <script src="/javascripts/buscarimagen.js"></script>
</body>

</html>