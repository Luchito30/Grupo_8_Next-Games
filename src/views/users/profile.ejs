<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>

            <div class="home__main--titulo">
                <h2>Perfil de Usuario</h2>
            </div>

            <main class="profile">
                <section class="profile-form">
                  <form>
                    <div class="profile-form-box-image">
                      <p class="profile-titulo">Avatar</p>
                      <img class="profile-image-avatar" src="/images/users/<%= locals.userLogin.image %>"
                        alt="Avatar">
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Nombre:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.firstName %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Apellido:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.LastName %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">E-mail:</label>
                      <input class="profile-form-box-input" type="email" value="<%= user.email %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Usuario:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.userName %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Calle:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.address %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Ciudad:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.city %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Provincia:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.province %>" disabled>
                    </div>
              
                    <div class="profile-form-box">
                      <label class="profile-titulo">Codigo postal:</label>
                      <input class="profile-form-box-input" type="text" value="<%= user.zipCode %>" disabled>
                    </div>
                  </form>
                </section>
              </main>

            <%- include('../partials/footer.ejs') %>
            <script src="/javascripts/fixed.js"></script>
    </body>

</html>