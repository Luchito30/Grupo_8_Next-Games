<!DOCTYPE html>
<html lang="en">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/loader.ejs') %>
            <div class="header__boostrap">
                <%- include('../partials/header') %>
            </div>


            <div class="home__main--titulo">
                <h2>

                    <% if( locals.subName ){ %>
                        <%= locals.subName %>
                            <% } %>
                </h2>
            </div>

            <div class="product__paginador">
                    <%- include('../partials/paginator') %>
                    <%- include('../partials/selectLimit') %>
                  </div>


            <section class="home__main__section" id="container-products-card">
                <% products.forEach(({id,image,price,discount,name,state})=> { %>
                    <%- include('../partials/product',{ id, image, price, discount, name, state }) %>
                        <% }) %>
            </section>

            <%- include('../partials/carrito.ejs') %>
                <!--whatsapp-->
                <%- include('../partials/whatsApp.ejs') %>

                    <div id="profile--footer">
                        <%- include('../partials/footer.ejs') %>
                    </div>


                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                        crossorigin="anonymous"></script>

                    <!-- fixed -->
                    <script src="/javascripts/fixed.js"></script>
                    <script src="/javascripts/paginadorSubcategory.js"></script>
                    <script src="/javascripts/favorites.js"></script>
                    <script src="/javascripts/loader.js"></script>
                    <script src="/javascripts/addproductToCard.js"></script>


    </body>

</html>