<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>
    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<body>
    <%- include('./partials/header.ejs') %>
    
    <div class= "table-responsive{-sm|-md|-lg|-xl|-xxl}">
                 <table class="table table-striped">
                    <thead class="table-dark dashboard--head">
                        <tr>
                            <th scope="col" class="dashboard--id">#</th>
                            <th scope="col" class="dashboard--name">Nombre</th>
                            <th scope="col" class="dashboard--image">Imagen</th>
                            <th scope="col" class="dashboard--price">Precio</th>
                            <th scope="col" class="dashboard--discount">Descuento</th>
                            <th scope="col" class="dashboard--total">Total</th>
                            <th scope="col" class="dashboard--category">Estado</th>
                            <th scope="col" class="dashboard--subCategory">Categoria</th>
                            <th scope="col" class="dashboard--accion">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-light dashboard--body">
                        <% products.forEach(({id,name,image,price,discount,category,subCategory}) => { %>
                            <tr>
                               <th scope="row" class="dashboard--id"><%= id %></th>
                               <td class="dashboard--name"><%= name %></td>
                               <td class="dashboard--image"><img class="dashboard--img" src="/images/products/<%= image %>"></td>
                               <td class="dashboard--price"><%= toThousand(price) %></td>
                               <td class="dashboard--discount"><%= discount %>%</td>
                               <td class="dashboard--total"> <% if (discount) { %>
                               $<%= toThousand(Math.round(price - (price * discount) /
                                100))%>
                        <% }else{ %>
                            $<%= toThousand(Math.round(price)) %>
                            <% } %></td>
                               <td class="dashboard--category"><%= category %></td>
                               <td class="dashboard--subCategory"><%= subCategory %></td>
                               <td class="dashboard--accion">asd</td>
                            </tr>
                           <% }) %>
                    </tbody>

                </table>
            </div> 
            
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>